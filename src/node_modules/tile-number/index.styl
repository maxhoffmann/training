.tile-number
  float: left
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  width: 100%
  height: 12em
  overflow: hidden
  font-size: 4vw

  @media (min-width: 30em)
    width: 50%
    font-size: 2vw

  @media (min-width: 50em)
    width: 25%
    font-size: 1.2vw

  &__number
    line-height: 2.32em
    font-weight: bold
    font-size: 3em

    &--length-1,
    &--length-2
      font-size: 7em
      line-height: 1em
    &--length-3
      font-size: 6em
      line-height: 1.16em
    &--length-4,
    &--length-5,
    &--length-6
      font-size: 4.5em
      line-height: 1.55em

  &__label
    font-size: 1.2em
    color: #8b8b8b
