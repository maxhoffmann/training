.tile-progress
  float: left
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  width: 100%
  height: 18em
  overflow: hidden
  font-size: 4vw
  font-feature-settings: 'tnum'

  @media (min-width: 50em)
    width: 50%
    font-size: 2vw
    height: 15em

  &__label
    font-size: 1.5em
    margin-top: 1.16em
    margin-bottom: 0

  .ct-chart
    width: 90%
    height: 80%

    .ct-series
      .ct-line
        stroke: #8cc665
      .ct-area
        fill: #8cc665
