.tile-weeks
  float: left
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  padding: 1em
  width: 100%
  height: 18em
  overflow: hidden
  font-size: 4vw
  font-feature-settings: 'tnum'

  @media (min-width: 50em)
    width: 50%
    font-size: 2vw
    height: 15em

  &__year
    padding: 1em
    font-weight: bold

  &__button
    cursor: pointer
    border: 0
    background: 0
    height: 2em
    width: 4em
    vertical-align: middle
    &:focus
      outline: none

  &__label
    float: left
    padding-left: 1em
    padding-right: 1em
    height: 3em
    line-height: 3em
    font-size: 0.6em
    color: #8b8b8b

  &__week
    float: left
    margin-right: 2px
    margin-bottom: 2px
    width: 3em
    height: 3em
    line-height: 3em
    background: #aaa
    overflow: hidden
    text-align: center
    font-size: 0.6em

    &--workouts-0
      color: #aaa
      background: #eee
    &--workouts-1
      color: #90A32E
      background: #d6e685
    &--workouts-2
      color: #1e6823
      background: #8cc665
    &--workouts-3
      color: #fff
      background: #1e6823
